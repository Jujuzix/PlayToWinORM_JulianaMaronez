<h1>Usuários</h1>

<a href="/usuarios/formularioUsuario">Cadastrar usuario</a>
<table border="1">
    <tr>
        <th>Nickname</th>
        <th>Nome</th>
    </tr>
    {{#each usuarios}}
    <tr>
        <td>{{this.nickname}}</td>
        <td>{{this.nome}}</td>
        <td>
            <a href="/usuarios/{{this.id}}/atualizar">Atualizar a Página</a>
          <form action="/usuarios/excluir" method="post">
          <input name="id" type="hidden" value="{{this.id}}"/> 
          <input type="submit" value="excluir"/>
          </form>
        </td>
    </tr>
    {{/each}}
</table>